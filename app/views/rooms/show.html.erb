<%- model_class = Room -%>
<div class="page-header">
  <h1><%=t '.title', :default => @room.name %></h1>
</div>
<%= subscribe_to "/rooms/#{@room.id}" %>
<%= form_tag({:controller => 'message',  :action => 'create.js'},  :remote => true) do %>
  <%= text_field_tag(:message,  '',  {:id => 'chat_text_box'}) %>
  <%= hidden_field_tag 'room_id',  @room.id %>
  <%= submit_tag 'POST' %>
<% end %>
<table id="chat" class="common-table table-striped table-condensed">
</table>
